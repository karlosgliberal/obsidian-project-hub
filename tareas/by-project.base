filters:
  and:
    - file.hasTag("task")
    - file.ext == "md"
    - "!file.folder.startsWith(\"plantillas\")"
properties:
  file.name:
    displayName: Tarea
  project:
    displayName: Proyecto
  status:
    displayName: Estado
views:
  - type: table
    name: Por Proyecto
    groupBy:
      property: project
      direction: ASC
    order:
      - file.name
      - status
